{
  "extends": "eslint:recommended",
  "globals": {
    "window": true,
    "document": true,
    "navigator": true,
    "location": true
  },
  "rules": {
    "no-console": ["off"], 
    "no-undef": ["off"], 
    "comma-dangle": ["error", "never"],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-cond-assign": ["error", "always"]
  }
}
